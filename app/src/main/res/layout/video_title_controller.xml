<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:id="@+id/video_title_help1"
        android:layout_alignParentTop="true"
        android:background="@color/md_black"
        android:alpha="0.4"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_title_help1"
        android:background="@color/md_black"
        android:alpha="0.4">
        <com.rey.material.widget.ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:src="@drawable/back"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:id="@+id/video_fullscreen_back"
            android:layout_centerVertical="true" />
        <com.rey.material.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/app_name"
            android:textColor="@color/md_blue_700"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_toEndOf="@+id/video_fullscreen_back"
            android:id="@+id/video_fullscreen_title"
            android:maxLength="25"/>
        <com.rey.material.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/choose_episode"
            android:textSize="25sp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/md_grey_300"
            android:gravity="center"
            android:id="@+id/video_fullscreen_episodes"/>
    </RelativeLayout>



</RelativeLayout>