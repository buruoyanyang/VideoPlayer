<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_blue_400">
    <com.rey.material.widget.TextView
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:id="@+id/title_help_tv0"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/title_help_tv0">
        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:id="@+id/title_help_tv1"
            android:visibility="invisible" />
        <com.rey.material.widget.ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:src="@drawable/icon"
            android:layout_toEndOf="@+id/title_help_tv1"
            android:id="@+id/title_app_button"
            android:layout_centerVertical="true" />
        <com.rey.material.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/title_app_button"
            android:text="@string/app_name"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:id="@+id/title_app_tv"
            android:textColor="@color/md_white"/>
        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:id="@+id/title_help_tv2"
            android:layout_alignParentEnd="true" />
        <com.rey.material.widget.ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@id/title_help_tv2"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/search_icon"
            android:id="@+id/title_app_search"/>
        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:id="@+id/title_help_tv3"
            android:layout_toStartOf="@+id/title_app_search"/>
        <com.rey.material.widget.ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:layout_toStartOf="@+id/title_help_tv3"
            android:layout_centerVertical="true"
            android:src="@drawable/download_icon"
            android:scaleType="fitXY"
            android:id="@+id/title_app_download"/>
        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:id="@+id/title_help_tv4"
            android:layout_toStartOf="@id/title_app_download"
            android:visibility="invisible"/>
        <com.rey.material.widget.ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:src="@drawable/history_icon"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/title_help_tv4"
            android:id="@+id/title_app_history"/>
    </RelativeLayout>
</RelativeLayout>