<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/md_blue_400">
        <TextView
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:id="@+id/user_help_tv2"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:src="@drawable/item_bg"
            android:id="@+id/user_image"
            android:layout_toEndOf="@id/user_help_tv2"
            android:paddingTop="10dp"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:id="@+id/user_help_tv1"
            android:layout_toEndOf="@id/user_image" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/user_help_tv1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="用户ID"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:paddingTop="10dp"
                android:layout_centerInParent="true"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_corner"
                android:text="开通会员"
                android:gravity="center"
                android:textColor="@color/md_blue_500"
                android:drawableStart="@drawable/crown"
                android:layout_above="@+id/user_help_tv4"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/user_help_tv4" />
        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/user_help_tv3" />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/settings"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/user_help_tv3" />
    </RelativeLayout>


</LinearLayout>