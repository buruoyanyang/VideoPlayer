<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="biezhi.videoplayer.videoPlay">
    <include layout="@layout/default_title_bar"
        android:id="@+id/video_play_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/video_play_title"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:id="@+id/video_view_rl">

            <SurfaceView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/video_view" />
            <include layout="@layout/media_controller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:id="@+id/video_controller_rl"/>
            <com.rey.material.widget.ProgressView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:pv_autostart="true"
                app:pv_circular="true"
                app:pv_progressStyle="@style/LoadingProgressBarAppearance"
                app:pv_progressMode="indeterminate"
                android:background="#00000000"
                android:id="@+id/video_loading_on"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:id="@+id/video_info_rl">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <com.rey.material.widget.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/video_source_from"
                        android:gravity="center"
                        android:paddingStart="3dp"
                        android:id="@+id/video_source_label" />
                    <com.rey.material.widget.ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/movie_source_1"
                        android:scaleType="fitXY"
                        android:background="#00000000"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/video_source_label"
                        android:padding="3dp"
                        android:id="@+id/video_source_1"
                        android:visibility="gone"/>
                    <com.rey.material.widget.ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/movie_source_2"
                        android:scaleType="fitXY"
                        android:background="#00000000"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/video_source_1"
                        android:padding="3dp"
                        android:id="@+id/video_source_2"
                        android:visibility="gone"/>
                    <com.rey.material.widget.ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/movie_source_3"
                        android:scaleType="fitXY"
                        android:background="#00000000"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/video_source_2"
                        android:padding="3dp"
                        android:id="@+id/video_source_3"
                        android:visibility="gone"/>
                    <com.rey.material.widget.ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/movie_source_4"
                        android:scaleType="fitXY"
                        android:background="#00000000"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/video_source_3"
                        android:padding="3dp"
                        android:id="@+id/video_source_4"
                        android:visibility="gone"/>
                    <com.rey.material.widget.ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/movie_source_5"
                        android:scaleType="fitXY"
                        android:background="#00000000"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/video_source_4"
                        android:padding="3dp"
                        android:id="@+id/video_source_5"
                        android:visibility="gone"/>
                    <com.rey.material.widget.Spinner
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_alignParentEnd="true"
                        android:background="#00000000"
                        android:id="@+id/video_quality_spinner"/>
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="1dp"
                        android:id="@+id/video_help_tv1"
                        android:layout_toStartOf="@+id/video_quality_spinner"/>
                    <com.rey.material.widget.ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="#00000000"
                        android:layout_toStartOf="@+id/video_help_tv1"
                        android:layout_centerVertical="true"
                        android:src="@drawable/favorate_icon"
                        android:scaleType="fitXY"
                        android:id="@+id/video_favorate_add"/>
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="1dp"
                        android:id="@+id/video_help_tv2"
                        android:layout_toStartOf="@+id/video_favorate_add"/>
                    <com.rey.material.widget.ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="#00000000"
                        android:layout_toStartOf="@+id/video_help_tv2"
                        android:layout_centerVertical="true"
                        android:src="@drawable/download_icon"
                        android:scaleType="fitXY"
                        android:id="@+id/video_download_add"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical">
                    <com.rey.material.widget.TabPageIndicator
                        style="@style/LightTabPageIndicatorEpisode"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:id="@+id/indicator"
                        app:tpi_mode="fixed"/>
                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
