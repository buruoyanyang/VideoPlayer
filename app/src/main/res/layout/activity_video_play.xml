<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="biezhi.videoplayer.videoPlay">
    <include layout="@layout/default_title_bar"
        android:id="@+id/video_play_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/video_play_title"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:id="@+id/video_view_rl">
            <tv.danmaku.ijk.media.widget.media.IjkVideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/video_view"
                />
            <include layout="@layout/media_controller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:id="@+id/video_info_rl">
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>
